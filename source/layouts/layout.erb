  </head>

  <body data-page="<%= data.page.name || 'undefined' %>">

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <%= link_to image_tag("header1.png", :width => "154", :height => "29"), "index.html", :class => "brand" %>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li class="home-nav"><%= link_to "Home", "index.html" %></li>
              <li class="about-nav"><%= link_to "About", "about.html" %></li>
              <li class="contact-nav"><%= link_to "Contact", "contact.html" %></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span3">
          <div class="well sidebar-nav">
            <ul class="nav nav-list">
              <li class="nav-header">Our Specialties</li>
              <li class="acutreatment-nav">
                <i class="icon-chevron-right"></i>
                <%= link_to "Acupuncture treatment", "acupuncture_treatment.html" %>
