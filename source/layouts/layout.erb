              <li class="diet-nav">
                <i class="icon-chevron-right"></i>
                <%= link_to "Therapeutic diet", "therapeutic_diet.html" %>
              </li>
              <li class="nav-header">Common Questions</li>
              <li class="conditions-nav">
                <i class="icon-chevron-right"></i>
                <%= link_to "Effective conditions treated in the clinic", "conditions.html" %>
              </li>
              <li class="expect-nav">
                <i class="icon-chevron-right"></i>
                <%= link_to "What to expect in an acupuncture treatment", "expect.html" %>
              </li>
              <li class="decoction-nav">
                <i class="icon-chevron-right"></i>
                <%= link_to "How to prepare herbal decoction", "decoction.html" %>
              </li>
              <li class="finances-nav">
                <i class="icon-chevron-right"></i>
                <%= link_to "Treatment Finances", "finances.html" %>
              </li>
              <li class="nav-header">Chinese Medicine</li>
              <li class="acupuncture-nav">
                <i class="icon-chevron-right"></i>
                <%= link_to "Acupuncture", "acupuncture.html" %>
              </li>
              <li class="herbal-nav">
                <i class="icon-chevron-right"></i>
                <%= link_to "Herbal Medicine", "herbal_medicine.html" %>
              </li>
              <li class="auricular-nav">
                <i class="icon-chevron-right"></i>
                <%= link_to "Auricular Acupuncture", "auricular_acupuncture.html" %>
              </li>
              <li class="acupressure-nav">
                <i class="icon-chevron-right"></i>
                <%= link_to "“Acupuncture” Treatment Without Needles", "acupressure.html" %>
              </li>
              <li class="cupping-nav">
                <i class="icon-chevron-right"></i>
                <%= link_to "Cupping", "cupping.html" %>
              </li>
              <li class="moxibustion-nav">
                <i class="icon-chevron-right"></i>
                <%= link_to "Moxibustion", "moxibustion.html" %>
              </li>
              <li class="nav-header">Medical Research</li>
              <li class="research1-nav">
                <i class="icon-chevron-right"></i>
                <%= link_to "Topic1", "topic1.html" %>
              </li>
            </ul>
          </div><!--/.well -->
        </div><!--/span-->

        <div class="span9">
            <%= yield %>
        </div><!--/span-->
      </div><!--/row-->

      <hr>

      <footer>
        <p>&copy; Wellspring Acupuncture 2012</p>
      </footer>

    </div><!--/.fluid-container-->

    <!-- Placed at the end of the document so the pages load faster -->
    <script src="http://code.jquery.com/jquery.js"></script>
    <script src="../vendor/bootstrap/js/bootstrap.js"></script>
    <%= javascript_include_tag  "all" %>
  </body>
</html>
